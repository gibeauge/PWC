            <Tag name="BODY"/>
            <Tag name="BODY" namespace="http://www.w3.org/1999/xhtml"/>
      </Group>

      <Group name="AllHeadings" indexType="UNSTORED" label="%docHeader">
            <Tag name="H1" namespace="http://www.w3.org/1999/xhtml"/>
            <Tag name="H2" namespace="http://www.w3.org/1999/xhtml"/>
            <Tag name="H3" namespace="http://www.w3.org/1999/xhtml"/>
            <Tag name="H4" namespace="http://www.w3.org/1999/xhtml"/>
            <Tag name="H5" namespace="http://www.w3.org/1999/xhtml"/>
            <Tag name="H6" namespace="http://www.w3.org/1999/xhtml"/>
