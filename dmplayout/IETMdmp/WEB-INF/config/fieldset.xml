            <Tag name="H2"/>
            <Tag name="H3"/>
            <Tag name="H4"/>
            <Tag name="H5"/>
            <Tag name="H6"/>
      </Group>
      
      <Group name="PrimaryHeading" indexType="UNSTORED" label="%primaryHeader">
            <Tag name="H1" namespace="http://www.w3.org/1999/xhtml"/>      
            <Tag name="H1"/>
      </Group>
      <Group name="SecondaryHeading" indexType="UNSTORED" label="%secondaryHeader">
            <Tag name="H2" namespace="http://www.w3.org/1999/xhtml"/>      
            <Tag name="H2"/>
      </Group>
      <Group name="TertiaryHeading" indexType="UNSTORED" label="%tertiaryHeader">
            <Tag name="H3" namespace="http://www.w3.org/1999/xhtml"/>      
            <Tag name="H3"/>
      </Group>

      <Group exclude = "true" name="HEAD">
            <Tag name="HEAD"/>
            <Tag name="HEAD" namespace="http://www.w3.org/1999/xhtml"/>
      </Group>

      <Group exclude = "true" name="SCRIPT">
            <Tag name="SCRIPT"/>
            <Tag name="SCRIPT" namespace="http://www.w3.org/1999/xhtml"/>
      </Group>

